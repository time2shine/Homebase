{
  "manifest_version": 3,
  "name": "Homebase",
  "version": "1.0",
  "description": "Replaces the default new tab page with a custom dashboard.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "rokonmagura@egmail.com"
    }
  },

  "chrome_url_overrides": {
    "newtab": "new-tab.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "history",
    "bookmarks",
    "clipboardRead",
    "contextualIdentities"
  ],

  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://geocoding-api.open-meteo.com/*",
    "https://duckduckgo.com/ac/*",
    "https://suggest.yandex.com/*",
    "https://ff.search.yahoo.com/*",
    "https://api.bing.com/osjson.aspx*",
    "https://suggestqueries.google.com/*",
    "https://t2.gstatic.com/*",
    "https://www.google.com/*",
    "https://en.wikipedia.org/*",
    "https://completion.amazon.com/*",
    "https://www.aljazeera.com/*",
    "https://feeds.bbci.co.uk/*",
    "https://feeds.feedburner.com/*",
    "https://www.espn.com/*",
    "https://www.espncricinfo.com/*"
  ],
  "optional_permissions": []
}
